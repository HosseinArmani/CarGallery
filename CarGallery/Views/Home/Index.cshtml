@model  IEnumerable<Car.DataLayer.ViewModel.ShowCarListItemViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">به نمایشگاه ماشین ما خوش آمدید</h1>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card">
                    <h1 class="card-title">@item.Name</h1>
                    <div class="card-body">
                        <h5 class="card-title">@item.Model</h5>
                        <span><span>قیمت:</span> @item.SalesPrice.ToString("#,0")</span>
                        <a asp-action="Detail"
                           asp-controller="Home"
                           asp-route-id="@item.CarId">جزئیات محصول</a>
                    </div>

                </div>
            </div>
        }
    </div>

</div>